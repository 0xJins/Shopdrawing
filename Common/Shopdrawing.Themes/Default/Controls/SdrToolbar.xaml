                            </Grid>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Visibility" Value="Visible" TargetName="border1"/>
                            <Setter Property="Visibility" Value="Visible" TargetName="border2"/>
                            <Setter Property="Fill" TargetName="ICON_PART" Value="{DynamicResource Toolbar-Button-Icon-Hover}"/>
